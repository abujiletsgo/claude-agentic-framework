{
  "_comment": "Autonomous Mode: Minimal permission prompts. Auto-approve safe operations, prompt only for destructive actions.",
  "version": "1.0",
  "model": "sonnet",
  "permissions": {
    "allow": [
      "*"
    ]
  },
  "sandbox": {
    "enabled": false
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/session/session_lock_manager.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/damage-control/unified-damage-control.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/automation/auto_review_team.py",
            "timeout": 2
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/session/session_lock_manager.py",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/context-bundle-logger.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/automation/auto_cost_warnings.py",
            "timeout": 2
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/automation/auto_error_analyzer.py",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/automation/auto_refine.py",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/automation/auto_dependency_audit.py",
            "timeout": 10
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/context/auto_context_manager.py",
            "timeout": 2
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/notifications/auto_voice_notifications.py",
            "timeout": 2
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/automation/auto_team_review.py",
            "timeout": 2
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/session/session_lock_manager.py",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/validators/check_lthread_progress.py",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/session/session_startup.py",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true
  },
  "statusLine": {
    "type": "command",
    "command": "uv run __REPO_DIR__/global-status-lines/mastery/status_line_custom.py",
    "padding": 0
  }
}
