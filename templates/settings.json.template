{
  "_comment": "Autonomous Mode: Minimal permission prompts. Auto-approve safe operations, prompt only for destructive actions.",
  "version": "1.0",
  "model": "sonnet",
  "permissions": {
    "allow": [
      "*"
    ]
  },
  "sandbox": {
    "enabled": false
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/session/session_lock_manager.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/damage-control/unified-damage-control.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/automation/auto_review_team.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/session/session_lock_manager.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/context-bundle-logger.py",
            "timeout": 8
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/automation/auto_cost_warnings.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/automation/auto_error_analyzer.py",
            "timeout": 8
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/automation/auto_refine.py",
            "timeout": 6
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/automation/auto_dependency_audit.py",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Bash|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/context/auto_context_manager.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/automation/auto_escalate.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/notifications/auto_voice_notifications.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/automation/auto_team_review.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/guardrails/circuit_breaker_wrapper.py -- uv run __REPO_DIR__/global-hooks/framework/knowledge/extract_learnings.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/session/session_lock_manager.py",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/validators/check_lthread_progress.py",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/knowledge/store_learnings.py",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/notifications/voice_done.py",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/session/session_startup.py",
            "timeout": 60
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/knowledge/inject_relevant.py",
            "timeout": 30
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/automation/repo_map.py",
            "timeout": 180
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/context/pre_compact_preserve.py",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/caddy/analyze_request.py",
            "timeout": 10
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run __REPO_DIR__/global-hooks/framework/caddy/auto_delegate.py",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true
  },
  "statusLine": {
    "type": "command",
    "command": "uv run __REPO_DIR__/global-status-lines/mastery/status_line_custom.py",
    "padding": 0
  }
}
